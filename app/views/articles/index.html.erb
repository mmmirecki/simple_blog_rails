

<section class="articles-container">
<h1 class=articles-title-element>Articles</h1>
<div class="articles-grid-element">
    <% @articles.each do |article|%>
    <div class="article-wrapper">
        <div class="articles-display-element">
            <%= link_to article.title, article%>
        </div>
        <div class="articles-edit-element">
            <%=link_to "Edit", edit_article_path(article)%>
        </div>
    </div>
    <%end%>
</div>
<div class="articles-create-element">
    <%= link_to "create new article", new_article_path%>
</div>
</section>